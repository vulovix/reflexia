{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": "",
    "paths": {
      "@reflexia/bar": ["libs/bar/src/index.ts"],
      "@reflexia/baz": ["libs/baz/src/index.ts"],
      "@reflexia/core": ["libs/core/src/index.ts"],
      "@reflexia/di": ["libs/di/src/index.ts"],
      "@reflexia/foo": ["libs/foo/src/index.ts"],
      "@reflexia/http": ["libs/http/src/index.ts"],
      "@reflexia/logger": ["libs/logger/src/index.ts"]
    }
  }
}
